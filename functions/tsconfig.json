{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["dom", "es2016", "esnext.asynciterable", "esnext"]
	},
	"compileOnSave": true,
	"include": ["src"]
}
